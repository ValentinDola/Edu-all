generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String?
  createdAt DateTime @default(now())
  profile   Profile?
}

model Profile {
  id             String  @id @default(auto()) @map("_id") @db.ObjectId
  bio            String?
  primarySkill   String?
  secondarySkill String?
  interest       String
  degree         String
  school         String?
  graduationYear String?
  userId         String  @unique @db.ObjectId
  user           User    @relation(fields: [userId], references: [id])
}

model Career {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  description     String
  skills          String
  areasOfInterest String
  courses         Course[]
  books           Books[]
  videos          Videos[]
}

model Course {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  courseName String
  platform   String
  url        String
  careerId   String @db.ObjectId
  career     Career @relation(fields: [careerId], references: [id])
}

model Books {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  author   String
  url      String
  careerId String @db.ObjectId
  career   Career @relation(fields: [careerId], references: [id])
}

model Videos {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  channel  String
  url      String
  careerId String @db.ObjectId
  career   Career @relation(fields: [careerId], references: [id])
}
